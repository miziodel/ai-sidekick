{
  "env": {
    "browser": true,
    "es2021": true,
    "webextensions": true,
    "node": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "globals": {
    "marked": "readonly",
    "Logic": "readonly",
    "CryptoUtils": "readonly",
    "ActionManager": "readonly",
    "DEFAULT_ACTIONS": "readonly",
    "importScripts": "readonly"
  },
  "rules": {
    "no-undef": "error",
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-redeclare": "warn",
    "semi": ["error", "always"]
  },
  "overrides": [
    {
      "files": ["tests/**/*.js"],
      "rules": {
        "no-unused-vars": "off",
        "no-undef": "off"
      }
    }
  ]
}
